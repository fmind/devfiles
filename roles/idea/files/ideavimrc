" PLUGINS
set surround
set multiple-cursors
" SETTINGS
set clipboard=unnamedplus
set hlsearch
set incsearch
set number
set relativenumber
set scrolloff=10
" KEYMAPS
noremap <CR> :
let mapleader = " "
noremap [[ :action MethodUp<CR>
noremap ]] :action MethodDown<CR>
noremap <A-S-k> :action VimWindowUp<CR>
noremap <A-S-j> :action VimWindowDown<CR>
noremap <A-S-h> :action VimWindowLeft<CR>
noremap <A-S-l> :action VimWindowRight<CR>
