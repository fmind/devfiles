" PLUGINS
set multiple-cursors
set surround
" SETTINGS
set clipboard=unnamedplus
set hlsearch
set incsearch
set number
set relativenumber
set scrolloff=10
" KEYMAPS
let mapleader = " "
noremap <CR> :
noremap <A-K> :action VimWindowUp<CR>
noremap <A-J> :action VimWindowDown<CR>
noremap <A-H> :action VimWindowLeft<CR>
noremap <A-L> :action VimWindowRight<CR>
"noremap [[ :action MethodUp<CR>
"noremap ]] :action MethodDown<CR>

noremap <leader>a :action GotoAction<CR>
noremap <leader>b :action ToggleLineBreakpoint<CR>
noremap <leader>c :action GotoClass<CR>
noremap <leader>d :action GotoDeclaration<CR>
noremap <leader>e :action RenameElement<CR>
noremap <leader>f :action GotoFile<CR>
noremap <leader>g :action GotoLine<CR>
noremap <leader>h :action VimWindowSplitHorizontal<CR>
noremap <leader>i :action GotoImplementation<CR>
noremap <leader>j :action GotoSymbol<CR>
noremap <leader>k :action Run<CR>
noremap <leader>l :nohl<CR>
noremap <leader>m :action NewElement<cr>
noremap <leader>n :action NextTab<CR>
noremap <leader>o :action OverrideMethods<CR>
noremap <leader>p :action PreviousTab<CR>
noremap <leader>q :action VimWindowClose<CR>
noremap <leader>r :action RecentFiles<CR>
noremap <leader>s :action ChangeSignature<CR>
noremap <leader>t :action GotoTest<CR>
noremap <leader>u :action Unwrap<CR>
noremap <leader>v :action VimWindowSplitVertical<CR>
noremap <leader>w :RerunTests<CR>
noremap <leader>x :action ToggleLineBreakpoint<CR>
noremap <leader>y :action GotoTypeDeclaration<CR>
noremap <leader>z :action CodeCleanup<CR>
"" leader (upper)
noremap <leader>A :action About<CR>
noremap <leader>B :action BackgroundTasks<CR>
"" noremap <leader>C 
noremap <leader>D :action Debug<CR>
"noremap <leader>E
"" noremap <leader>F 
noremap <leader>G :action Generate<CR>
"noremap <leader>H
"noremap <leader>I :action ImplementMethods<CR>
"noremap <leader>J :action Rerun<CR>
"noremap <leader>K :action RerunTests<CR>
"noremap <leader>L :action RerunFailedTests<CR>
noremap <leader>M :action BuildMenu<CR>
"" noremap <leader>N
"noremap <leader>O
noremap <leader>P :action TogglePresentationMode<CR>
noremap <leader>Q :action CloseProject<CR>
"noremap <leader>R
"noremap <leader>S
noremap <leader>T :action ActivateTODOToolWindow<CR>
noremap <leader>U :action ShowUsages<CR>
"noremap <leader>V
noremap <leader>W :action RerunFailedTests
noremap <leader>X :action ViewBreakpoints<CR>
noremap <leader>Y :action TypeHierarchy<CR>
noremap <leader>Z :source ~/.ideavimrc<CR>
"" leader (other)
"noremap <leader>] :action EditorCodeBlockEnd<CR>
"noremap <leader>[ :action EditorCodeBlockStart<CR>
"noremap <leader>/ :action CommentByLineComment<CR>
